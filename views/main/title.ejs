<%- layout('layout/boilerplate') %> 
        <div class="row">
        <div class="col-md-6 offset-md-3">

        <form action="/createTitle" method="POST" class="validated-form" novalidate>

            <h1 class="text-center mb-5">Create New Title</h1>
            <div class="row mb-3">
                <label for="title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="eg: Best boxer of all time" maxlength="32" name="title" class="form-control" id="word_count" required>
                  <span id="display_count" class="ms-1">0</span><span>/31</span><br>
                  <button class="btn btn-success mt-2" type="submit">Create</button>
                </div>

        </form>
    </div>
        </div>

        <script>
         const textarea = document.querySelector('#word_count')
         const count = document.querySelector('#display_count')
        </script>

