<%- layout('/layout/boilerplate') %> 

<div class="container-fluid">
    <h1 class="text-center">Astrics - <small>The most Liked</small></h1>
    <a class="btn btn-success" href="/createTitle">Create New Title</a>
    
    <div class="row">
        <% for(let head of Title) {%>
        <div class="col-6 col-md-3">
            <div class="card text-center mt-4">
                <div class="card-body">
                  <h5 class="card-title"><%= head.title %> </h5>
                  <!-- <p class="card-text">With supporting text below as a natural lead-in to additional content.</p> -->
                  <a href="/<%=head._id%>/show "  class="btn btn-primary mt-2">Open</a>
                </div>
              </div>
        </div>
        <% } %> 
    </div>
        
</div>